<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfo.main_image_url, width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfo.title %></h1>

      <hr>

      <em><%= @portfo.subtitle %></em>

      <p><%= @portfo.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfo.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>


